{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "default": "Untitled"
        },
        "problem_statement": {
            "type": "string",
            "default": ""
        },
        "lang": {
            "type": "string",
            "default": "python3"
        },
        "deadline": {
            "type": "string",
            "format": "date-time",
            "default": "MM/DD/YYYY,HH:MM"
        },
        "code": {
            "type": "object",
            "properties": {
                "prefix": {
                    "type": "string",
                    "default": ""
                },
                "template": {
                    "type": "string",
                    "default": ""
                },
                "suffix": {
                    "type": "string",
                    "default": ""
                },
                "suffix_invisible": {
                    "type": "string",
                    "default": ""
                },
                "solution": {
                    "type": "string",
                    "default": ""
                }
            },
            "required": [
                "prefix",
                "template",
                "suffix",
                "suffix_invisible",
                "solution"
            ]
        },
        "testcases": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "input": {
                        "type": "string",
                        "default": ""
                    },
                    "output": {
                        "type": "string",
                        "default": ""
                    },
                    "is_public": {
                        "type": "boolean",
                        "default": true
                    }
                },
                "required": [
                    "input",
                    "output",
                    "is_public"
                ]
            }
        },
        "evaluator": {
            "type": "string",
            "default": "nsjail"
        },
        "ignore_presentation_error": {
            "type": "boolean",
            "default": true
        },
        "allow_compile": {
            "type": "boolean",
            "default": true
        },
        "show_sample_solution": {
            "type": "boolean",
            "default": true
        }
    },
    "required": [
        "title",
        "problem_statement",
        "lang",
        "deadline",
        "code",
        "testcases",
        "evaluator",
        "ignore_presentation_error",
        "allow_compile",
        "show_sample_solution"
    ]
}